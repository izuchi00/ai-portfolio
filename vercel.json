{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/ai-chat.ts": { "runtime": "nodejs20.x" },
    "api/data-analysis.ts": { "runtime": "nodejs20.x" },
    "api/python-analysis/**": {
      "runtime": "docker",
      "memory": 1024,
      "maxDuration": 30
    }
  }
}